{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}
{% block body %}
<a href="{{ path('newauthor') }}" class="btn btn-primary">New Auteur</a>

    <h1>Liste des auteurs</h1>
 
   {% if authors is defined and authors|length > 0 %}
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.id }}</td>
                    <td>{{ author.username }}</td>
                    <td>{{ author.email }}</td>
                    <td>            <a href="{{ path('author_edit', {'id': author.id}) }}" class="btn btn-primary">Edit</a><a href="{{ path('author_delete', {'id': author.id}) }}" class="btn btn-danger" onclick="return confirmDelete();">Delete</a>

<script>
function confirmDelete() {
    return confirm("Are you sure you want to delete this author?");
}
</script>
</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p class="mt-3">Nombre d'auteurs : {{ authors|length }}</p>
    <p>Nombre total de livres : {{ sumOfBooks }}</p>
{% else %}
    <p class="mt-3">Aucun auteur trouv√©.</p>
{% endif %}

{% endblock %}
