{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}
{% block body %}
<a href="{{ path('book_add') }}" class="btn btn-primary">New Livre</a>

    <h1>Liste des Livres</h1>
 
   {% if books is defined and books|length > 0 %}
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Ref</th>
                <th>Title</th>
                <th>Publication Date</th>
                <th>Published</th>
                <th>Category</th>
                <th>Author</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.ref }}</td>
                    <td>{{ book.title }}</td>
<td>{{ book.Publicationdate|date('Y-m-d H:i:s') }}</td>
                    <td>
    {% if book.Published == 1 %}
        Oui
    {% else %}
        Non
    {% endif %}
</td>
                    <td>{{ book.Category }}</td>
                    <td>{{book.author.username}}</td>

                    <td>            <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-primary">Edit</a>
                    <a href="{{ path('book_delete', {'id': book.id}) }}" class="btn btn-danger" onclick="return confirmDelete();">Delete</a>
                    <a href="{{ path('book_show',{'id': book.id}) }}" class="btn btn-info">Voir</a>
<script>
function confirmDelete() {
    return confirm("Are you sure you want to delete this Book?");
}
</script>
</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p class="mt-3">Nombre de livres : {{ books|length }}</p>
{% else %}
    <p class="mt-3">Aucun livre trouvé.</p>
    {% endif %}
{% if unpublished != 0 %}
    <p class="mt-3">Nombre de livres non publié : {{ unpublished }}</p>
{% else %}
    <p class="mt-3">Aucun livre non publié trouvé.</p>
{% endif %}

{% endblock %}
