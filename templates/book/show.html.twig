{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ book.title }}</h1>
    <dl>
        <dt>Title:</dt>
        <dd>{{ book.title }}</dd>

        <dt>Category:</dt>
        <dd>{{ book.category }}</dd>

        <dt>Published:</dt>
        <dd>{{ book.published ? 'Yes' : 'No' }}</dd>

        <dt>Publication Date:</dt>
        <dd>{{ book.publicationDate|date('Y-m-d') }}</dd> {# assuming publicationDate is a DateTime object #}

        <dt>Author:</dt>
        <dd>{{ book.author.username }}</dd> {# assuming 'author' is the property in Book entity representing the Author object #}
    </dl>

    <a href="{{ path('book_index') }}">Back to the list</a>
    <a href="{{ path('book_edit', {'id': book.id}) }}">Edit</a>
{% endblock %}